<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:textColorPrimaryInverse">@color/icons</item>

    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ViewEmpty">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GeneralText">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for the image icon in view build -->
    <style name="ViewBuildImageIcon">
        <item name="android:layout_width">17dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ViewBuildImageIcon.Big" parent="ViewBuildImageIcon">
        <item name="android:layout_width">19dp</item>
        <item name="android:layout_height">19dp</item>
    </style>

    <style name="ViewBuildImageIcon.TopAligned" parent="ViewBuildImageIcon">
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- Style for the text in view build -->
    <style name="ViewBuildText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="ViewBuildText.OneLine" parent="ViewBuildText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ViewBuildText.OneLine.Big" parent="ViewBuildText.OneLine">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="ViewBuildText.TwoLines" parent="ViewBuildText">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ViewBuildText.TwoLines.Big" parent="ViewBuildText.TwoLines">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="ViewBuildText.TwoLines.Title.NoImage" parent="ViewBuildText.TwoLines">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="ViewBuildText.ThreeLines" parent="ViewBuildText">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ViewBuildText.ThreeLines.Big" parent="ViewBuildText.ThreeLines">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <!-- Style of the CardView container -->
    <style name="CardViewContainer" parent="CardView">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="CardViewChild">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <!-- Style of the FloatingActionButton -->
    <style name="FloatingActionButton" parent="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:clickable">true</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="FloatingActionButton.RightBottom" parent="FloatingActionButton">
        <item name="android:layout_gravity">bottom|right</item>
        <item name="layout_anchorGravity">bottom|right|end</item>
    </style>
</resources>